
    <%= simple_form_for(@book, html: {class: "form-signin"}) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>


      <%= f.input :name, required: true, label: false, placeholder: "Title of your book" %>
      <%= f.input :author, required: true, label: false, placeholder: "Author" %>
      <%= f.input :description, required: true,label: false, placeholder: "Description..." %>
      <%= f.input :price, required: true, label: false, placeholder: "Price" %>
      <div class="text-center">
        <p>Availability</p>
        <%= f.input :availability, required: true, label: false %>
      </div>



      <%= f.button :submit, class: "btn btn-primary btn-block" %>

    <% end %>
