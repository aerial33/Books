

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"form-signin" }) do |f| %>
  <%= f.error_notification %>
  <h2 class="text-center">Forgot your password?</h2>

    <%= f.input :email,
                required: true,
                label: false,
                placeholder: "Email",
                autofocus: true,
                input_html: { autocomplete: "email" } %>



    <%= f.button :submit, "Send me new password", class:"btn btn-primary btn-block" %>
  <%= render "devise/shared/links" %>
<% end %>
